<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="styles/index.css" />
    <title><%= title %></title>
  </head>
  <body>
    <%- include("partials/header.ejs") %>

    <main id="main-body" class="container border rounded row col-11 m-auto">
      <section id="posts" class="col-12 col-md-8">
        <div
          class="d-flex justify-content-center align-items-center flex-column"
        >
          <% if (posts.length > 0) { %> <% posts.forEach(post => { %>
          <div
            id="post<%= post.id %>"
            class="post w-100 p-3 my-3 border rounded"
          >
            <div id="postHeader" class="row">
              <h2 class="col-12 col-sm-8 col-md-7"><%= post.postHeader %></h2>
              <p class="col-12 col-sm-4 col-md-5 text-end fw-light">
                Post <%= post.id %> - Created on <%= post.creationDateTime %>
              </p>
            </div>
            <p><%= post.postContent %></p>
            <div class="text-end">
              <button
                class="btn btn-warning btn-sm btn-edit"
                data-id="<%= post.id %>"
                data-bs-toggle="modal"
                data-bs-target="#editModal"
              >
                Edit
              </button>
              <form action="/delete" method="post" style="display: inline">
                <input type="hidden" name="id" value="<%= post.id %>" />
                <button type="submit" class="btn btn-danger btn-sm">
                  Delete
                </button>
              </form>
            </div>
          </div>
          <% }); %> <% } else { %>
          <p class="m-3 fw-bold text-center">
            There's no publications yet. Be the first one! üëáüèª
          </p>
          <% } %>
        </div>
      </section>

      <section id="postForm" class="col-12 col-md-4 my-3">
        <form action="/submit" method="post" class="p-3 border rounded row">
          <div id="header" class="col-12 m-auto">
            <label for="postHeader" class="form-label"
              ><b>Post Title:</b></label
            >
            <input
              type="text"
              class="form-control"
              id="postHeader"
              name="postHeader"
              placeholder="Insert the post title here"
              required
            />
          </div>
          <div id="content" class="col-12 m-auto mt-3">
            <label for="postContent" class="form-label"
              ><b>Post Content:</b></label
            >
            <textarea
              class="form-control"
              id="postContent"
              name="postContent"
              rows="3"
              placeholder="Insert the post content here"
              required
            ></textarea>
          </div>
          <div id="submit" class="col text-center mt-3 container">
            <input
              type="submit"
              class="btn btn-custom fw-medium"
              value="Submit Post"
            />
          </div>
        </form>
      </section>
    </main>

    <!-- Edit Modal -->
    <div
      class="modal fade"
      id="editModal"
      tabindex="-1"
      aria-labelledby="editModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="editModalLabel">Edit Post</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form id="editForm" action="/edit" method="post">
              <input type="hidden" name="id" id="editPostId" />
              <div class="mb-3">
                <label for="editPostHeader" class="form-label"
                  >Post Title</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="editPostHeader"
                  name="postHeader"
                />
              </div>
              <div class="mb-3">
                <label for="editPostContent" class="form-label"
                  >Post Content</label
                >
                <textarea
                  class="form-control"
                  id="editPostContent"
                  name="postContent"
                  rows="3"
                ></textarea>
              </div>
              <button type="submit" class="btn btn-custom">Save changes</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <%- include("partials/footer.ejs", {year: new Date().getFullYear()}) %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const editButtons = document.querySelectorAll(".btn-edit");
        const editPostId = document.getElementById("editPostId");
        const editPostHeader = document.getElementById("editPostHeader");
        const editPostContent = document.getElementById("editPostContent");

        editButtons.forEach((button) => {
          button.addEventListener("click", () => {
            const postId = button.getAttribute("data-id");
            fetch(`/post/${postId}`)
              .then((response) => response.json())
              .then((post) => {
                editPostId.value = post.id;
                editPostHeader.value = post.postHeader;
                editPostContent.value = post.postContent;
              })
              .catch((error) =>
                console.error("Error fetching post data:", error)
              );
          });
        });
      });
    </script>
  </body>
</html>
